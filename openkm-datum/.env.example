# ==================================
# OpenKM Datum - Variables de Entorno (Ejemplo)
# ==================================
# Copia este archivo a .env y ajusta los valores según tu entorno

# ----------------------------------
# Configuración del Servidor Quarkus
# ----------------------------------
QUARKUS_HTTP_HOST=0.0.0.0
QUARKUS_HTTP_PORT=8082

# ----------------------------------
# Configuración de OpenKM
# ----------------------------------
OPENKM_API_URL=http://localhost:8200
OPENKM_USERNAME=admin
OPENKM_PASSWORD=admin
OPENKM_API_TIMEOUT=30000

# ----------------------------------
# Configuración de Subida de Archivos
# ----------------------------------
QUARKUS_HTTP_BODY_UPLOADS_DIRECTORY=/tmp/uploads
QUARKUS_HTTP_LIMITS_MAX_BODY_SIZE=50M

# ----------------------------------
# Configuración de OpenAPI / Swagger
# ----------------------------------
MP_OPENAPI_EXTENSIONS_SMALLRYE_INFO_TITLE=OpenKM Integration API
MP_OPENAPI_EXTENSIONS_SMALLRYE_INFO_VERSION=1.0.0
MP_OPENAPI_EXTENSIONS_SMALLRYE_INFO_DESCRIPTION=API REST para integración con OpenKM
MP_OPENAPI_EXTENSIONS_SMALLRYE_INFO_CONTACT_EMAIL=support@datum.org
MP_OPENAPI_EXTENSIONS_SMALLRYE_INFO_CONTACT_NAME=Datum Support Team

# ----------------------------------
# Configuración de CORS
# ----------------------------------
QUARKUS_HTTP_CORS=true
QUARKUS_HTTP_CORS_ORIGINS=*

# ----------------------------------
# Configuración de Logging
# ----------------------------------
QUARKUS_LOG_LEVEL=INFO
QUARKUS_LOG_CATEGORY_ORG_DATUM_OPENKM_LEVEL=DEBUG
